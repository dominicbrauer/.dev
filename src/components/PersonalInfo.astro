---
import { Image } from "astro:assets";
import ProfilePicture from "@/assets/images/profile.webp";
import { CodeXmlIcon, CalendarFoldIcon, MapPinIcon } from "@lucide/astro";
---

<div class="personal-info card">
	<Image
		class="profile-picture"
		src={ProfilePicture}
		alt="My profile picture."
	/>
	<span class="name">Dominic Brauer</span>
	<div class="info-wrapper">
		<CalendarFoldIcon />
		<span>19 years old</span>
		<MapPinIcon />
		<span>Germany, RV</span>
		<CodeXmlIcon />
		<span>2 years of experience</span>
	</div>
	<p class="summary">
		This website is work in progress. I'd recommend to check it out later again!
	</p>
</div>

<style>
	.personal-info {
		display: grid;
		grid-template-columns: min-content min-content;
		grid-template-rows: min-content min-content min-content;
		gap: var(--size-m);
		max-width: min-content;
	}

	.profile-picture-wrapper {
		grid-row: 1 / span 2;
		grid-column: 1;
		aspect-ratio: 1 / 1;
		height: 100%;
		width: auto;
		object-fit: contain;
		border-radius: var(--br-hard);
		overflow: hidden;
	}

	.profile-picture {
		grid-column: 1;
		grid-row: 1 / span 2;
		width: 160px;
		height: auto;
		object-fit: contain;
	}

	.name {
		grid-column: 2;
		grid-row: 1;
		font-weight: 700;
		font-size: var(--size-xl);
		text-wrap: nowrap;
		color: var(--text);
		height: fit-content;
	}

	.info-wrapper {
		grid-column: 2;
		grid-row: 2;
		display: grid;
		grid-template-columns: auto 1fr;
		column-gap: var(--size-s);
		row-gap: var(--size-xs);
	}

	.info-wrapper svg {
		grid-column: 1;
	}

	.info-wrapper span {
		align-self: center;
		text-wrap: nowrap;
		grid-column: 2;
	}

	.summary {
		grid-column: 1 / span 2;
		grid-row: 3;
		height: fit-content;
	}
</style>